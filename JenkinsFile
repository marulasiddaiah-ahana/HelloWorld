pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Welcome to Jenkins Automation'
            }
        }
    
    
        stage('Build') {
            steps {
            sh "pwd"
                dir('${env.WORKSPACE}') {
            sh "pwd"
            }
            sh "pwd"
                echo "what inside the files"
            }
        }
    
    
        stage('Deploy') {
            steps {
                echo 'Hello World'
            }
        }
    }
}
