pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Welcome to Jenkins Automation'
            }
        }
    
    
        stage('Build') {
            steps {
                sh "pwd"
                echo "before"
                dir('${env.WORKSPACE}'){
                echo "inside"
                    sh "pwd"
                }
                echo "what inside the files"
            }
        }
    
    
        stage('Deploy') {
            steps {
                echo 'Hello World'
            }
        }
    }
}
